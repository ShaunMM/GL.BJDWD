<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E68C">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="用户名："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="六个鸡"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:paddingLeft="10dp"
        android:text="标题"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_notetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_notecontent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_notesave"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="top"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/et_notetitle"
        android:text="内容"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_notesave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_notecontent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_notecontent"
        android:layout_marginBottom="5dp"
        android:background="#ADFF2F"
        android:paddingRight="10dp"
        android:text="保存" />

</RelativeLayout>
